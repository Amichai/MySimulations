<Window x:Class="ModelAndSimulations.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ad="http://avalondock.codeplex.com"
        xmlns:h="clr-namespace:ChartingHelper;assembly=ChartingHelper"
        xmlns:m="clr-namespace:ModelAndSimulations"
        Title="MainWindow" Height="600" Width="525">
    <Grid>
        <ad:DockingManager x:Name="dockManager">
            <ad:LayoutRoot>
                <ad:LayoutPanel Orientation="Horizontal">
                    <ad:LayoutDocumentPaneGroup  DockWidth="500">
                        <ad:LayoutDocumentPane x:Name="pane">
                            <ad:LayoutAnchorable Title="Urn Model - Mimetic Contagion">
                                <m:UrnModel />

                            </ad:LayoutAnchorable>
                        </ad:LayoutDocumentPane>
                    </ad:LayoutDocumentPaneGroup>
                </ad:LayoutPanel>
            </ad:LayoutRoot>
        </ad:DockingManager>
    </Grid>
</Window>
